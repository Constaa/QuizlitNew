<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bTBestenliste"
        style="@style/ButtonStyle2"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_above="@+id/bTFragen"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:text="bestenliste"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btNormal"
        style="@style/ButtonStyle"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_above="@+id/bTBestenliste"
        android:layout_alignParentStart="true"
        android:text="SPIELEN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:clickable="true"
        />

    <Button
        android:id="@+id/bTFragen"
        style="@style/ButtonStyle"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_above="@+id/tVProblemee"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:text="frage einsenden"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/facebook"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:layout_marginEnd="13dp"

        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/instagram"
        android:clickable="true"
        android:layout_marginTop="66dp"
        android:layout_alignTop="@+id/bTFragen"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        app:srcCompat="@drawable/twitter"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher"
        android:layout_above="@+id/btNormal"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tVProblemee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problem melden"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        />
</RelativeLayout>
