<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moruk"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/frage"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/wann_wurde_die_berliner_mauer_niedergerissen"
        android:textAlignment="center"
        android:textColor="@color/fontColorDafrk" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="100" />

    <Button
        android:id="@+id/antwort4"
        style="@style/ButtonStyle"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@+id/antwort3"
        android:layout_centerHorizontal="true"
        android:text="1990"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/antwort1"
        style="@style/ButtonStyle"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:text="1956"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/antwort2"
        style="@style/ButtonStyle"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/antwort1"
        android:text="1986"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/antwort3"
        style="@style/ButtonStyle"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/antwort2"
        android:text="1872"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
